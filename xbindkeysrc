"xbacklight -dec 5"
    XF86MonBrightnessDown

"xbacklight -inc 5"
    XF86MonBrightnessUp

"playerctl -p mpv previous"
    XF86AudioPrev

"playerctl -p mpv play-pause"
    XF86AudioPlay

"playerctl -p mpv next"
    XF86AudioNext

"amixer set Master toggle"
    XF86AudioMute

"amixer set Master 5%-"
    XF86AudioLowerVolume

"amixer set Master 5%+"
    XF86AudioRaiseVolume

